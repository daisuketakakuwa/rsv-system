{
  "include": ["src"],
  "types": ["node", "vitest/globals"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "outDir": "./build",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "noEmit": true,
    "skipLibCheck": false,
    "isolatedModules": false,
    "strict": true
  }
}
